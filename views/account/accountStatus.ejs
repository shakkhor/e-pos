<!DOCTYPE html>

<html lang="en">
<% include ../common/head.ejs %>

<body>
    <% include ../common/sideBar.ejs %>
    <header id="header">
        <% include ../common/navBar.ejs %>
    </header>
    <div class="mui-container">
        <div class="mui-panel" style="margin-top: 72px; margin-left:10% ">
            <center>
                <br>
                <legend style="margin-left:-5%; font-size: 24pt">Account Status</legend>
                <br>
            </center>

            <div class="mui-select mui-col-md-5">
                <legend>Opening Balance</legend>
                <div class="mui-textfield">
                    <input type="number" name="note" maxlength="35" step=".01" readonly
                        value="<%= account.get('opBalance').toFixed(2) %>" />
                </div>
            </div>

            <div class="mui-select mui-col-md-1">

            </div>

            <div class="mui-select mui-col-md-5">
                <legend>Current Balance</legend>
                <div class="mui-textfield">
                    <input type="number" name="expense" step="0.01" readonly
                        value="<%= account.get('balance').toFixed(2) %>" />
                </div>
            </div>
            <form method="POST" action="/account/close">

                <div class="mui-select mui-col-md-2">
                    <button class="mui-btn mui-btn--primary mui-btn--raised" type="submit">
                        Close Account
                    </button>
                </div>

            </form>
        </div>
    </div>

    <% include ../common/footer.ejs %>
</body>

</html>
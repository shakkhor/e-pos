<!DOCTYPE html>

<html lang="en">
<% include ../common/head.ejs %>

<body>
    <% include ../common/sideBar.ejs %>
    <header id="header">
        <% include ../common/navBar.ejs %>
    </header>
    <div id="content-wrapper ">
        <div class="mui--appbar-height"></div>
        <div class="mui-container">
            <div class="top-panel">

                <div class="mui-container-fluid">
                    <div class="mui-row">
                        <div class="mui-textfield mui-col-md-4">
                            <legend>Date from</legend>
                            <input type="date" name="dateFrom" data-date="" data-date-format="dd mm yyyy">
                        </div>
                        <div class="mui-textfield mui-col-md-4">

                            <legend>Date to</legend>
                            <input type="date" name="dateTo" data-date="" data-date-format="dd mm yyyy">
                        </div>
                        <div class="mui-textfield mui-col-md-3">
                            <br>
                            <center>
                                <button class="mui-btn mui-btn--primary">Button</button>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
            <br>

            <div class="panel">
                <div style="height = 500px">
                    <table id="customers" class="table-bordered table-sm table table-striped" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th style="width:  100%;">
                                    <center>Sales Transaction</center>
                                </th>

                                <!-- <th></th> -->
                            </tr>
                        </thead>
                        <tbody style="height: 345px; overflow-y: auto;">
                            <% bills.forEach(function (bill) { %>
                            <tr>


                                <td style="width: 100%;"> Date: <%= bill.get('date') %> <br>
                                    <strong>Customer: </strong> <%= bill.get('customer') %>
                                    <br>
                                    <strong>Item: </strong>
                                    <%= bill.get('item') %>
                                    <strong> Quantity: </strong><%= bill.get('quantity') %>
                                    <strong> BP:</strong>
                                    <%= bill.get('purchasePrice') %>
                                    <strong> SP:</strong>
                                    <%= bill.get('sellingPrice') %>
                                    <strong> TP:</strong>
                                    <%= bill.get('totalPrice') %>
                                    <strong> Profit:</strong>
                                    <%= bill.get('profit') %>
                                </td>

                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <footer style="margin-top: 20px;">
                    <% if (pages > 0) { %>
                    <div class="footer">
                        <ul class="pagination text-center">

                            <% if (currentPage == 0) { %>
                            <li class="disabled"><a>First</a></li>
                            <% } else { %>
                            <li><a href="/bill/find_bills?page=0">First</a></li>
                            <% } %>


                            <% for(var i=1; i < lastPage-1; i++) {%>
                            <% if(i == currentPage){ %>
                            <li class="disabled"><a href="/bill/find_bills?page=<%= i %>"> <%= i %> </a></li>
                            <% }else{ %>
                            <li><a href="/bill/find_bills?page=<%= i %>"> <%= i %> </a></li>
                            <% }} %>

                            <% if (currentPage == pages-1) { %>
                            <li class="disabled"><a>Last</a></li>
                            <% } else { %>
                            <li><a href="/bill/find_bills?page=<%= pages-1 %>">Last</a></li>
                            <% } %>

                        </ul>
                    </div>
                    <% } %>
                </footer>
            </div>
        </div>
    </div>




    <% include ../common/footer.ejs %>


